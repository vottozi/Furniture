<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="14dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_card"
                android:layout_width="380dp"
                android:layout_height="380dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/sofa_beige" />

            <TextView
                android:id="@+id/name_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Диван Manhattan"
                android:textSize="26sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:background="#AEF8A1">

                <TextView
                    android:id="@+id/price_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="1250"
                    android:textSize="26sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_dollars_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$"
                    android:textSize="26sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/description_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="2dp"
                android:text="Диван-кровать Manhattan (Манхеттен) – прекрасный выбор для гостиной или столовой, кабинета или спальни. Благодаря нейтральной расцветке – светлой бежевой обивке, красиво простеганной квадратами, и невысоким деревянным ножкам - данная модель одинаково удачно будет смотреться как в сдержанном, минималистичном интерьере, так и в более вычурном, ярком. У данного дивана есть несколько преимуществ. В разложенном виде он превращается в уютную кровать, что очень удобно. Кроме того, под его сиденьем расположен ящик для хранения вещей, что позволяет решить проблему нехватки места. *Подушки в комплект не входят и приобретаются отдельно."
                android:textSize="20sp"
                android:visibility="visible" />

        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>