<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="36dp">

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#D6EDF8"
            android:padding="8dp">

            <ImageView
                android:id="@+id/image_card"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/sofa"
                android:layout_gravity="center_horizontal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="10dp">

                <TextView
                    android:id="@+id/title_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Диван-тройка"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginStart="16dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/price_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1250"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="38dp"/>

                    <TextView
                        android:id="@+id/icon_dollars"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:layout_marginRight="10dp" />

                    <TextView
                        android:id="@+id/icon_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="60%"
                        android:textSize="26sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:id="@+id/description_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Этот замечательный дизайнерский диван из коллекции Mercado — идеальный выбор для любителей супер мягкого отдыха. В ним собрано идеальное сочетание современного стиля и классической стойкости.Если вам нравится легкая текстура ткани, вы обязательно оцените великолепную серую обивку этого дивана с тонким эффектом шеврона.Комфорт и функциональность, собранные воедино –  Mercado просто создан для размеренного отдыха в кругу семьи или компании друзей!"
                    android:textSize="20sp"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="9dp"
                    android:visibility="gone"
                    android:textAlignment="center"/>

                <ImageButton
                    android:id="@+id/btd_done"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="right"
                    android:layout_marginEnd="18dp"
                    android:contentDescription="done"
                    android:src="@drawable/baseline_double_arrow_24"
                    android:background="#D6EDF8"/>


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</androidx.appcompat.widget.LinearLayoutCompat>